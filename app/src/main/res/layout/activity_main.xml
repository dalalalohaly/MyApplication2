<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.dalal.myapplication.MainActivity">

    <TextView
        android:text=""
        android:background="@drawable/arow"
        android:layout_width="40sp"
        android:layout_height="35sp"
        android:id="@+id/textView27"
        android:layout_alignBottom="@+id/textView26"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:text=""
        android:background="@drawable/zwara_word"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:id="@+id/textView26"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_width="40sp"
        android:background="@drawable/person"
        android:layout_height="35sp"
        android:id="@+id/textView28"
        android:layout_alignBaseline="@+id/textView27"
        android:layout_alignBottom="@+id/textView27"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:onClick="send"
        android:text=""
        android:background="@drawable/sendinv"
        android:layout_width="1000sp"
        android:layout_height="100sp"
        android:id="@+id/textView24"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:onClick="Go"
        android:text=""
        android:background="@drawable/receved"
        android:layout_width="1000sp"
        android:layout_height="100sp"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:onClick="saved"
        android:text=""
        android:background="@drawable/myinitations"
        android:layout_width="1000sp"
        android:layout_height="100sp"
        android:id="@+id/textView23"
        android:textStyle="normal|bold"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textView27"
        />

    <TextView
        android:onClick="create"
        android:text=""
        android:background="@drawable/create"
        android:layout_width="1000sp"
        android:layout_height="100sp"
        android:id="@+id/textView22"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

</RelativeLayout>
